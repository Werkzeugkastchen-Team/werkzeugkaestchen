{% extends 'base.html' %}
<h1>{% block page_title %} Farbkonvertierer {% endblock %}</h1>
{% block content %}
<div class="mb-4">
    <p class="lead text-secondary">{{ description }}</p>

    {% if use_cases %}
    <div class="mt-4">
        <p class="mb-2 fw-semibold">{{ _('Anwendungsf채lle:') }}</p>
        <ul class="ps-4 text-dark-emphasis">
            {% for use_case in use_cases %}
            <li class="mb-1">{{ use_case }}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
</div>

<div class="color-converter-container">
    <div class="live-color-preview">
        <div id="colorPreview" class="color-preview"></div>
        <canvas id="colorWheel" width="250" height="250"></canvas>
        <div id="colorMarker" class="color-marker"></div>
    </div>

    <div class="color-inputs">
        <div class="input-group mb-3">
            <span class="input-group-text">HEX:</span>
            <input type="text" id="hexInput" class="form-control" placeholder="#FF0000" value="#FF0000">
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">RGB:</span>
            <input type="text" id="rgbInput" class="form-control" placeholder="255, 0, 0" value="255, 0, 0">
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">HSL:</span>
            <input type="text" id="hslInput" class="form-control" placeholder="0, 100%, 50%" value="0, 100%, 50%">
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">HSV:</span>
            <input type="text" id="hsvInput" class="form-control" placeholder="0, 100%, 100%" value="0, 100%, 100%">
        </div>
    </div>

    <!-- Rest des HTML-Inhalts wie im urspr체nglichen Tool -->
    <!-- ... -->

    <div class="color-sliders mt-4">
        <!-- ... RGB-Slider-HTML ... -->
    </div>

    <div class="color-examples mt-4">
        <!-- ... Farbbeispiele-HTML ... -->
    </div>

    <div class="mt-4">
        <!-- ... Farberkl채rungen-HTML ... -->
    </div>
</div>

<style>
    /* CSS aus dem urspr체nglichen Tool */
    /* ... */
</style>

<script src="{{ url_for('static', filename='js/color_converter_tool.js') }}"></script>
{% endblock %}